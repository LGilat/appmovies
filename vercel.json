{
    "builds": [
        {
            "src": "appmovies/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9", "includeFiles": ["**/*.py", "**/*.sqlite3"] }
          },
          {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
              "distDir": "staticfiles"
            }
          }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1"
          },
        {
        "src": "/(.*)",
        "dest": "appmovies/wsgi.py"
        }
    ]

}
